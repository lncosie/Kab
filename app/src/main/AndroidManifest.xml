<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lncosie.zigbee" >
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.lncosie.zigbee.view.AppActivity" >
        </activity>
        <activity android:name="com.lncosie.zigbee.view.GatewayActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.lncosie.zigbee.view.GatewaySearchActivity" >
        </activity>
        <activity android:name="com.lncosie.zigbee.view.DeviceActivity" >
        </activity>
        <activity android:name="com.lncosie.zigbee.view.UserSettingActivity" >
        </activity>
        <activity android:name="com.lncosie.zigbee.view.SystemSettingActivity" >
        </activity>
        <activity android:name="com.lncosie.zigbee.view.UserImageActivity" >
        </activity>
    </application>

</manifest>
